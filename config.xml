<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.phonegap.example"
        versionCode = "10" 
        version     = "1.0.0" >

    <!-- versionCode is optional and Android only -->

    <name>PhoneGapBuild</name>

    <description>
         Doctrs.in
    </description>

    <author href="http://www.infinisystem.com" email="support@infiniteit.biz">
        Infini Systems
    </author>
   <preference name="phonegap-version" value="cli-6.0.0" />
    <preference name="webviewbounce" value="false" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="UIWebViewBounce" value="false" />
    <preference name="StatusBarOverlaysWebView" value="true" />
    
    <platform name="ios" />
    <platform name="android" />
        <access origin="*"/> <!-- allow all pages, use for development -->
    <allow-navigation href="*" />
    <plugin name="org.crosswalk.engine" spec="1.3.0" source="pgb" />
    <plugin name="cordova-plugin-splashscreen" spec="2.1.0" source="pgb" /> 
    <plugin name="cordova-plugin-inappbrowser" spec="1.0.1" source="pgb" /> 
    <plugin name="cordova-plugin-file" spec="3.0.0" source="pgb" /> 
    <plugin name="cordova-plugin-file-transfer" spec="1.3.0" source="pgb" /> 
    
    <plugin name="cordova-plugin-device" spec="1.0.1" source="pgb" />
    <plugin name="cordova-plugin-camera" spec="1.2.0" source="pgb" /> 
    <plugin name="cordova-plugin-console" spec="1.0.1" source="pgb" />
    <plugin name="cordova-plugin-network-information" spec="1.0.1" source="pgb" />
    
    <plugin name="cordova-plugin-whitelist" source="npm" />
    <plugin name="cordova-plugin-x-toast" source="npm" />
    <plugin name="com.phonegap.plugin.statusbar" spec="1.1.0" source="pgb" />
    <plugin name="de.appplant.cordova.plugin.printer" spec="0.7.1" source="pgb" />
    
    <plugin name="nl.x-services.plugins.socialsharing" spec="4.3.8" source="pgb" />
    <plugin name="de.appplant.cordova.plugin.hidden-statusbar-overlay" spec="1.2.0" source="pgb" />
        <preference name="xwalkVersion" value="17+" />
    <preference name="xwalkCommandLine" value="--disable-pull-to-refresh-effect" />
    <preference name="xwalkMode" value="embedded" />
    <preference name="xwalkMultipleApk" value="false" />

</widget>